# Base RPC URL (you can use a public one or your own)
BASE_RPC_URL=https://mainnet.base.org

# Optional: Alchemy, Infura, or other provider URLs
# BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Trading Mode (IMPORTANT!)
# Set to false only when you're ready for REAL trading with REAL money
SIMULATION_MODE=true

# Trading Configuration
MIN_ETHOS_SCORE=750                 # Range: 0-3000 (higher = more selective)
MAX_INVESTMENT_ETH=0.1
TAKE_PROFIT_PERCENTAGE=200
STOP_LOSS_PERCENTAGE=50

# Time-based exit strategies (in minutes)
MAX_HOLD_TIME_MINUTES=1440

# Log level control (DEBUG=all details, INFO=normal, WARN=trades only, ERROR=errors only)
LOG_LEVEL=INFO

# Private key for trading (be very careful with this!)
# PRIVATE_KEY=your_private_key_here

# Optional: Discord/Telegram webhook for notifications
# DISCORD_WEBHOOK_URL=
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID= 