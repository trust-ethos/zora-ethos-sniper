# Base RPC URL (you can use a public one or your own)
BASE_RPC_URL=https://mainnet.base.org

# Optional: Alchemy, Infura, or other provider URLs
# BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Trading Mode (IMPORTANT!)
# Set to false only when you're ready for REAL trading with REAL money
SIMULATION_MODE=true

# Trading Configuration
MIN_ETHOS_SCORE=750                 # Range: 0-3000 (higher = more selective)
MAX_INVESTMENT_ETH=0.1
TAKE_PROFIT_PERCENTAGE=200
STOP_LOSS_PERCENTAGE=50

# Time-based exit strategies (in minutes)
MAX_HOLD_TIME_MINUTES=1440

# Log level control (DEBUG=all details, INFO=normal, WARN=trades only, ERROR=errors only)
LOG_LEVEL=INFO

# ⚠️ REAL TRADING CONFIGURATION (DANGEROUS!) ⚠️
# Only enable these for LIVE TRADING with real money

# Your wallet private key (WITHOUT 0x prefix)
# ⚠️ NEVER share this key or commit it to git!
# PRIVATE_KEY=your_64_character_private_key_here

# Transaction safety limits
MAX_GAS_PRICE_GWEI=20              # Reject if gas > 20 gwei
MAX_SLIPPAGE_PERCENT=5             # Maximum slippage tolerance
MIN_LIQUIDITY_ETH=1.0              # Minimum pool liquidity required
TRANSACTION_DEADLINE_MINUTES=10    # Transaction deadline

# Trading parameters
TRADE_AMOUNT_ETH=0.001             # Amount per trade (start VERY small!)
MAX_POSITIONS=2                    # Maximum concurrent positions
TAKE_PROFIT_PERCENT=150.0          # Take profit at +150%
STOP_LOSS_PERCENT=50.0             # Stop loss at -50%
MAX_HOLD_TIME_MINUTES=60           # Max hold time: 1 hour

# Safety switches
ENABLE_BUYING=false                # Must be true to buy tokens
ENABLE_SELLING=false               # Must be true to sell tokens
DRY_RUN_MODE=true                  # Set false for real transactions

# Optional: Discord/Telegram webhook for notifications
# DISCORD_WEBHOOK_URL=
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID= 